<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:swagpoints="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dualcores.swagpoint.MainActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_centerInParent="true"
        android:background="@android:color/black"
        >
        <com.dualcores.swagpoints.SwagPoints
            android:id="@+id/swag_points"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            swagpoints:arcColor="@android:color/white"
            swagpoints:progressColor="@color/colorPrimary"
            swagpoints:progressWidth="8dp"
            android:padding="40dp"
            />
        <TextView
            android:id="@+id/text_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
