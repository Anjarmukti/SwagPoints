<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:swagpoints="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_gravity="center"
        >

        <com.dualcores.swagpoints.SwagPoints
            android:id="@+id/seekbar_point"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="40dp"
            swagpoints:rotation="0"
            swagpoints:indicatorIcon="@drawable/indicator"
            swagpoints:clockwise="true"
            swagpoints:arcColor="@android:color/white"
            swagpoints:progressColor="@color/colorPrimary"
            swagpoints:arcWidth="4dp"
            swagpoints:roundEdges="false"
            android:layout_centerInParent="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/text_set_point"
            android:text="Free"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</LinearLayout>